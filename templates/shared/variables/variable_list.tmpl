<h4 class="ui top attached header">
	{{.locale.Tr "actions.variables.management"}}
	<div class="ui right">
		<button class="ui primary tiny show-variable-edit-modal button"
			data-is-new="true"
			data-base-action="{{.Link}}/new"
			data-modal="#edit-variable-modal"
			data-modal-header="{{.locale.Tr "actions.variables.creation"}}"
		>
			{{.locale.Tr "actions.variables.creation"}}
		</button>
	</div>
</h4>
<div class="ui attached segment">
	{{if .Variables}}
	<div class="ui key list">
		{{range $i, $v := .Variables}}
		<div class="item gt-df gt-ac gt-fw {{if gt $i 0}} gt-py-4{{end}}">
			<div class="content gt-f1 gt-ellipsis">
				<strong>{{$v.Title}}</strong>
				<div class="print meta gt-ellipsis">{{$v.Content}}</div>
			</div>
			<div class="content">
				<span class="color-text-light-2 gt-mr-5">
					{{$.locale.Tr "settings.added_on" (DateTime "short" $v.CreatedUnix) | Safe}}
				</span>
				<button class="ui btn interact-bg show-variable-edit-modal gt-p-3"
					data-is-new="false"
					data-old-title="{{$v.Title}}"
					data-old-content="{{$v.Content}}"
					data-modal="#edit-variable-modal"
					data-base-action="{{$.Link}}/{{$v.ID}}/edit"
					data-modal-header="{{$.locale.Tr "actions.variables.edit"}}"
					data-tooltip-content="{{$.locale.Tr "actions.variables.edit_tooltip" $v.Content}}"
				>
					{{svg "octicon-pencil"}}
				</button>
				<button class="ui btn interact-bg delete-button link-action gt-p-3"
					data-url="{{$.Link}}/{{$v.ID}}/delete"
					data-modal-confirm="{{$.locale.Tr "actions.variables.deletion.description"}}"
					data-tooltip-content="{{$.locale.Tr "actions.variables.delete" $v.Content}}"
				>
					{{svg "octicon-trash"}}
				</button>
			</div>
		</div>
		{{end}}
	</div>
	{{else}}
		{{.locale.Tr "actions.variables.none"}}
	{{end}}
</div>

{{/** Edit variable dialog */}}
<div class="ui small modal" id="edit-variable-modal">
	<div class="header">
		<span id="actions-modal-header"></span>
	</div>
	<form class="ui form ignore-dirty">
		<div class="content">
			{{.CsrfTokenHtml}}
			<div class="field">
				{{.locale.Tr "actions.variables.description"}}
			</div>
			<div class="field">
				<label for="modal-variable-name">{{.locale.Tr "actions.variables.name"}}</label>
				<input autofocus required
					name="title"
					id="modal-variable-name"
					value="{{.title}}"
					pattern="^[a-zA-Z_][a-zA-Z0-9_]*$"
					placeholder="{{.locale.Tr "secrets.creation.name_placeholder"}}"
				>
			</div>
			<div class="field">
				<label for="modal-variable-value">{{.locale.Tr "actions.variables.value"}}</label>
				<textarea required
					name="content"
					id="modal-variable-value"
					placeholder="{{.locale.Tr "secrets.creation.value_placeholder"}}"
				></textarea>
			</div>
		</div>
		{{template "base/modal_actions_confirm" (dict "locale" $.locale "ModalButtonTypes" "confirm")}}
	</form>
</div>

