<h4 class="ui top attached header">
	{{.locale.Tr "actions.variables.management"}}
	<div class="ui right">
		<button class="ui primary tiny show-modal show-variable-edit-modal button"
			data-is-new="true"
			data-base-action="{{.Link}}/new"
			data-modal="#edit-variable-modal"
			data-modal-header="{{.locale.Tr "actions.variables.creation"}}"
		>
			{{.locale.Tr "actions.variables.creation"}}
		</button>
	</div>
</h4>
<div class="ui attached segment">
	{{if .Variables}}
	<div class="ui key list">
		{{range $i, $v := .Variables}}
		<div class="item{{if gt $i 0}} gt-py-4{{end}}">
			<div class="right floated content">
				<i class="color-text-light-2 gt-mr-5">
					{{$.locale.Tr "settings.added_on" (DateTime "short" $v.CreatedUnix) | Safe}}
				</i>
				<button class="ui button button-ghost show-modal show-variable-edit-modal gt-mx-3"
					data-is-new="false"
					data-old-name="{{$v.Name}}"
					data-old-value="{{$v.Data}}"
					data-modal="#edit-variable-modal"
					data-base-action="{{$.Link}}/{{$v.ID}}/edit"
					data-modal-header="{{$.locale.Tr "actions.variables.edit"}}"
					data-tooltip-content="{{$.locale.Tr "actions.variables.edit_tooltip" $v.Name}}"
				>
					{{svg "octicon-pencil"}}
				</button>
				<button class="ui button button-ghost delete-button gt-mx-3"
					data-url="{{$.Link}}/{{$v.ID}}/delete"
					data-tooltip-content="{{$.locale.Tr "actions.variables.delete" $v.Name}}"
				>
					{{svg "octicon-trash"}}
				</button>
			</div>
			<div class="content">
				<strong>{{$v.Name}}</strong>
				<div class="print meta">{{$v.Data}}</div>
			</div>
		</div>
		{{end}}
	</div>
	{{else}}
		{{.locale.Tr "actions.variables.none"}}
	{{end}}
</div>

{{/** Edit Variable Dialog */}}
<div class="ui small modal" id="edit-variable-modal">
	<div class="header">
		<span id="variable-edit-header"></span>
	</div>
	<form class="ui form ignore-dirty">
		<div class="content">
			{{.CsrfTokenHtml}}
			<div class="field">
				{{.locale.Tr "actions.variables.description"}}
			</div>
			<div class="field">
				<label for="modal-variable-name">{{.locale.Tr "actions.variables.name"}}</label>
				<input autofocus required
					name="name"
					id="modal-variable-name"
					value="{{.title}}"
					pattern="^[a-zA-Z_][a-zA-Z0-9_]*$"
					placeholder="{{.locale.Tr "secrets.creation.name_placeholder"}}"
				>
			</div>
			<div class="field">
				<label for="modal-variable-value">{{.locale.Tr "actions.variables.value"}}</label>
				<textarea required
					name="value"
					id="modal-variable-value"
					placeholder="{{.locale.Tr "secrets.creation.value_placeholder"}}"
				></textarea>
			</div>
		</div>
		{{template "base/modal_actions_confirm" (dict "locale" $.locale "ModalButtonTypes" "confirm")}}
	</form>
</div>

{{/** Delete Variable Confirm Dialog */}}
<div class="ui g-modal-confirm delete modal">
	<div class="header">
		{{svg "octicon-trash"}}
		{{.locale.Tr "actions.variables.deletion"}}
	</div>
	<div class="content">
		<p>{{.locale.Tr "actions.variables.deletion.description"}}</p>
	</div>
	{{template "base/modal_actions_confirm" .}}
</div>
