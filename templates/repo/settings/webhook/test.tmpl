{{if and .PageIsSettingsHooksEdit .Permission.IsAdmin}}
	<h4 class="ui top attached header">
		{{.locale.Tr "repo.settings.webhook.test"}}
	</h4>
	<div class="ui attached segment">
		<p>{{.locale.Tr "repo.settings.webhook.test_desc"}}</p>
		<form class="ui form">
			{{.CsrfTokenHtml}}
			<div class="required field">
				<label for="branch">{{.locale.Tr "repo.branch"}}</label>
				<div class="ui selection dropdown">
					{{svg "octicon-triangle-down" 14 "dropdown icon"}}
					<input type="hidden" id="branch" name="branch" value="{{if .WebhookBranches}}{{index .WebhookBranches 0}}{{end}}">
					<div class="default text">{{if .WebhookBranches}}{{index .WebhookBranches 0}}{{end}}</div>
					<div class="menu">
						{{range .WebhookBranches}}
							<div class="item" data-value="{{.}}">{{.}}</div>
						{{end}}
					</div>
				</div>
			</div>
			<div class="required field">
				<label for="event">{{.locale.Tr "repo.settings.webhook.event"}}</label>
				<div class="ui selection dropdown">
					{{svg "octicon-triangle-down" 14 "dropdown icon"}}
					<input type="hidden" id="hook_event" name="hook_event" value="{{if .WebhookEvents}}{{index .WebhookEvents 0}}{{end}}">
					<div class="default text">post</div>
					<div class="menu">
						{{range .WebhookEvents}}
							<div class="item" data-value="{{.}}">{{.}}</div>
						{{end}}
					</div>
				</div>
			</div>
			<div class="field">
				<button class="ui green button {{if and (not .WebhookBranches) (not .WebhookEvents)}}disabled{{end}}" id="test-delivery" data-link="{{.Link}}/test">{{.locale.Tr "repo.settings.webhook.test_btn"}}</button>
			</div>
		</form>
	</div>
{{end}}
