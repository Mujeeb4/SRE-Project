{{if eq .HookType "custom"}}
	<p>{{.i18n.Tr "repo.settings.add_web_hook_desc" "https://docs.gitea.io/en-us/webhooks/" (.i18n.Tr "repo.settings.web_hook_name_custom") | Str2html}}</p>
	<form class="ui form" action="{{.BaseLink}}/custom/{{or .Webhook.ID "new"}}" method="post">
		{{.CsrfTokenHtml}}
		<div class="required field {{if .Err_PayloadURL}}error{{end}}">
			<label for="payload_url">{{.i18n.Tr "repo.settings.custom_host_url"}}</label>
			<input id="payload_url" name="payload_url" type="url" value="{{.CustomHook.HostURL}}" autofocus required>
		</div>

		<div class="field">
			<label for="auth_token">{{.i18n.Tr "repo.settings.custom_auth_token"}}</label>
			<input id="auth_token" name="auth_token" type="text" value="{{.CustomHook.AuthToken}}">
		</div>
		{{template "repo/settings/webhook/settings" .}}
	</form>
{{end}}
