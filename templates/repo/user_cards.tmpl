<div class="ui container user-cards">
	<h2 class="ui dividing header">
		{{.CardsTitle}}
	</h2>
	<ul class="list">
		{{range .Cards}}
			<li class="item ui segment">
				<a href="{{.HomeLink}}">
					<img class="avatar" src="{{.RelAvatarLink}}"/>
				</a>
				<h3 class="name"><a href="{{.HomeLink}}">{{.DisplayName}}</a></h3>

				<div class="meta">
					{{if .Website}}
						{{octicon "link" false}} <a href="{{.Website}}" target="_blank" rel="noopener noreferrer">{{.Website}}</a>
					{{else if .Location}}
						{{octicon "location" false}} {{.Location}}
					{{else}}
						{{octicon "clock" false}} {{$.i18n.Tr "user.join_on"}} {{.CreatedUnix.FormatShort}}
					{{end}}
				</div>
			</li>
		{{end}}
	</ul>

	{{ template "base/paginate" . }}
</div>
