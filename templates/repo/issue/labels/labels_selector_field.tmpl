<div class="ui {{if or (not .HasIssuesOrPullsWritePermission) .Repository.IsArchived}}disabled{{end}} floating jump select-label dropdown">
	<span class="text gt-df gt-ac muted">
		<strong>{{.locale.Tr "repo.issues.new.labels"}}</strong>
		{{if and .HasIssuesOrPullsWritePermission (not .Repository.IsArchived)}}
			{{svg "octicon-gear" 16 "gt-ml-2"}}
		{{end}}
	</span>
	<div class="filter menu" {{if .Issue}}data-action="update" data-issue-id="{{$.Issue.ID}}" data-update-url="{{$.RepoLink}}/issues/labels"{{else}}data-id="#label_ids"{{end}}>
		{{if or .Labels .OrgLabels}}
			<div class="ui icon search input">
				<i class="icon">{{svg "octicon-search" 16}}</i>
				<input class="labels-filter-input" type="text" placeholder="{{.locale.Tr "repo.issues.filter_labels"}}">
			</div>
		{{end}}
		<a class="no-select item" href="#">{{.locale.Tr "repo.issues.new.clear_labels"}}</a>
		{{if or .Labels .OrgLabels}}
			{{$previousExclusiveScope := "_no_scope"}}
			{{range $i, $Label := .Labels}}
				{{$exclusiveScope := $Label.ExclusiveScope}}
				{{if and (ne $previousExclusiveScope "_no_scope") (ne $previousExclusiveScope $exclusiveScope)}}
					<div class="ui divider" data-divider-index="{{$i}}"></div>
				{{end}}
				{{$previousExclusiveScope = $exclusiveScope}}
				<a class="{{if $Label.IsChecked}}checked{{end}} item" href="#" data-id="{{$Label.ID}}" data-id-selector="#label_{{$Label.ID}}" data-scope="{{$exclusiveScope}}" data-divider-group="{{$i}}"><span class="octicon-check {{if not $Label.IsChecked}}invisible{{end}}">{{if $exclusiveScope}}{{svg "octicon-dot-fill"}}{{else}}{{svg "octicon-check"}}{{end}}</span>&nbsp;&nbsp;{{RenderLabel $.Context $Label}}
				{{if $Label.Description}}<br><small class="desc">{{$Label.Description | RenderEmoji $.Context}}</small>{{end}}</a>
			{{end}}
			<div class="ui divider"></div>
			{{$previousExclusiveScope := "_no_scope"}}
			{{range $j, $OrgLabel := .OrgLabels}}
				{{$exclusiveScope := $OrgLabel.ExclusiveScope}}
				{{if and (ne $previousExclusiveScope "_no_scope") (ne $previousExclusiveScope $exclusiveScope)}}
					<div class="ui divider" data-divider-index="{{$j}}"></div>
				{{end}}
				{{$previousExclusiveScope = $exclusiveScope}}
				<a class="{{if $OrgLabel.IsChecked}}checked{{end}} item" href="#" data-id="{{$OrgLabel.ID}}" data-id-selector="#label_{{$OrgLabel.ID}}" data-scope="{{$exclusiveScope}}" data-divider-group="{{$j}}"><span class="octicon-check {{if not $OrgLabel.IsChecked}}invisible{{end}}">{{if $exclusiveScope}}{{svg "octicon-dot-fill"}}{{else}}{{svg "octicon-check"}}{{end}}</span>&nbsp;&nbsp;{{RenderLabel $.Context $OrgLabel}}
				{{if $OrgLabel.Description}}<br><small class="desc">{{$OrgLabel.Description | RenderEmoji $.Context}}</small>{{end}}</a>
			{{end}}
		{{else}}
			<div class="disabled item">{{.locale.Tr "repo.issues.new.no_items"}}</div>
		{{end}}
	</div>
</div>
