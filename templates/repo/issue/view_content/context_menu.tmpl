{{if .ctx.IsSigned}}
<div class="item action ui pointing top right dropdown">
	<a class="context-menu">
		<i class="fa fa-ellipsis-h"></i>
	</a>
	<div class="menu">
		<div class="item context clipboard" data-clipboard-text="{{AppUrl}}{{.ctx.Repository.FullName}}/issues/{{.ctx.Issue.Index}}#{{.item.HashTag}}">Copy Link</div>
		<div class="item context quote-reply">Quote Reply</div>
		{{if or .ctx.Permission.IsAdmin (eq .item.Poster.ID .ctx.SignedUserID)}}
			<div class="divider"></div>
			<div class="item context edit-content">Edit</div>
			{{if .delete}}
				<div class="item context delete-comment" data-comment-id={{.item.HashTag}} data-url="{{.ctx.RepoLink}}/comments/{{.item.ID}}/delete" data-locale="{{.ctx.i18n.Tr "repo.issues.delete_comment_confirm"}}">Delete</div>
			{{end}}
		{{end}}
	</div>
</div>
{{end}}
