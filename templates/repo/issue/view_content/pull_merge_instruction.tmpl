<div class="divider"></div>
<div class="instruct-toggle"> {{ctx.Locale.Tr "repo.pulls.merge_instruction_hint" | Safe}} </div>
<div class="instruct-content gt-mt-3 gt-hidden">
	<div><h3 class="gt-dib">{{ctx.Locale.Tr "step1"}}</h3> {{ctx.Locale.Tr "repo.pulls.merge_instruction_step1_desc"}}</div>
	<div class="ui secondary segment">
		{{if eq .PullRequest.Flow 0}}
		<div>git checkout -b {{if ne .PullRequest.HeadRepo.ID .PullRequest.BaseRepo.ID}}{{.PullRequest.HeadRepo.OwnerName}}-{{end}}{{.PullRequest.HeadBranch}} {{.PullRequest.BaseBranch}}</div>
		<div>git pull {{if ne .PullRequest.HeadRepo.ID .PullRequest.BaseRepo.ID}}<gitea-origin-url data-url="{{.PullRequest.HeadRepo.Link}}"></gitea-origin-url>{{else}}origin{{end}} {{.PullRequest.HeadBranch}}</div>
		{{else}}
		<div>git fetch origin {{.PullRequest.GetGitRefName}}:{{.PullRequest.HeadBranch}}</div>
		{{end}}
	</div>
	<div><h3 class="gt-dib">{{ctx.Locale.Tr "step2"}}</h3> {{ctx.Locale.Tr "repo.pulls.merge_instruction_step2_desc"}}</div>
	<div class="ui secondary segment">
		<div>git checkout {{.PullRequest.BaseBranch}}</div>
		<div>git merge --no-ff {{if ne .PullRequest.HeadRepo.ID .PullRequest.BaseRepo.ID}}{{.PullRequest.HeadRepo.OwnerName}}-{{end}}{{.PullRequest.HeadBranch}}</div>
		<div>git push origin {{.PullRequest.BaseBranch}}</div>
	</div>
</div>
