{{if ctx.RootData.IsSigned}}
<div class="item action ui dropdown jump pointing top right select-reaction" data-action-url="{{.ActionURL}}">
	<a class="muted">{{svg "octicon-smiley"}}</a>
	<div class="menu">
		{{range $value := AllowedReactions}}
		<a class="item comment-reaction-button" data-tooltip-content="{{$value}}" aria-label="{{$value}}" data-reaction-content="{{$value}}"><span class="emoji">{{ReactionToEmoji $value}}</span></a>
		{{end}}
	</div>
</div>
{{end}}
