<div class="ui segment sub-menu">
	<div class="ui two horizontal center link list">
		{{if and (.Permission.CanRead $.UnitTypeCode) (not .IsEmptyRepo)}}
			<div class="item{{if .PageIsCommits}} active{{end}}">
				<a class="ui" href="{{.RepoLink}}/commits{{if .IsViewBranch}}/branch{{else if .IsViewTag}}/tag{{else if .IsViewCommit}}/commit{{end}}/{{EscapePound .BranchName}}">{{octicon false "history"}} <b>{{.CommitsCount}}</b> {{.i18n.Tr (TrN .i18n.Lang .CommitsCount "repo.commit" "repo.commits") }}</a>
			</div>
		{{end}}
		{{if and (.Permission.CanRead $.UnitTypeCode) (not .IsEmptyRepo) }}
			<div class="item{{if .PageIsBranches}} active{{end}}">
				<a class="ui" href="{{.RepoLink}}/branches/">{{octicon false "git-branch"}} <b>{{.BranchesCount}}</b> {{.i18n.Tr (TrN .i18n.Lang .BranchesCount "repo.branch" "repo.branches") }}</a>
			</div>
			<div class="item">
				<a class="ui" href="#">{{octicon false "database"}} <b>{{SizeFmt .Repository.Size}}</b></a>
			</div>
		{{end}}
	</div>
</div>
