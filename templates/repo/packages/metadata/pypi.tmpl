{{if eq .Package.Type 4}}
	{{if .Metadata.Author}}<div class="item" title="{{.i18n.Tr "repo.packages.details.author"}}">{{svg "octicon-person" 16 "mr-3"}} {{.Metadata.Author}}</div>{{end}}
	{{if .Metadata.ProjectURL}}<div class="item">{{svg "octicon-link-external" 16 "mr-3"}} <a href="{{.Metadata.ProjectURL}}" target="_blank" rel="noopener noreferrer me">{{.i18n.Tr "repo.packages.details.project_site"}}</a></div>{{end}}
	{{if .Metadata.License}}<div class="item" title="{{.i18n.Tr "repo.packages.details.license"}}">{{svg "octicon-law" 16 "mr-3"}} {{.Metadata.License}}</div>{{end}}
{{end}}
