{{if eq .Package.Type 1}}
	<h4 class="ui top attached header">{{.i18n.Tr "repo.packages.installation"}}</h4>
	<div class="ui attached segment">
		<div class="ui form">
			<label for="registry-input">{{.i18n.Tr "repo.packages.nuget.registry"}}</label>
			<div>
				<input id="registry-input" type="text" readonly="readonly" value="dotnet nuget add source --name Gitea --username your_username --password your_token {{AppUrl}}api/v1/repos/{{.Repository.FullName}}/packages/nuget/index.json">
			</div>
			<label for="installation-input">{{.i18n.Tr "repo.packages.nuget.use"}}</label>
			<div>
				<input id="installation-input" type="text" readonly="readonly" value="dotnet add package --source Gitea --version {{.Package.Version}} {{.Package.Name}}">
			</div>
		</div>
		{{.i18n.Tr "repo.packages.nuget.documentation" | Safe}}
	</div>

	{{if or .Metadata.Description .Metadata.ReleaseNotes}}
		<h4 class="ui top attached header">{{.i18n.Tr "repo.packages.about"}}</h4>
		<div class="ui attached segment">
			{{if .Metadata.Description}}{{.Metadata.Description}}{{end}}
			{{if .Metadata.ReleaseNotes}}{{Str2html .Metadata.ReleaseNotes}}{{end}}
		</div>
	{{end}}

	{{if .Metadata.Dependencies}}
		<h4 class="ui top attached header">{{.i18n.Tr "repo.packages.dependencies"}}</h4>
		<div class="ui attached segment">
		{{range $framework, $dependencies := .Metadata.Dependencies}}
			<div class="ui relaxed list">
				<div class="item"><strong>{{$framework}}</strong></div>
				{{range $dependencies}}
					<div class="item">{{.ID}} ({{.Version}})</div>
				{{end}}
			</div>
		{{end}}
		</div>
	{{end}}
{{end}}
