{{if .dependencies}}
<div class="item">
	<div class="content">
		<div class="header"><strong>{{.title}}</strong></div>
		<div class="list">
			{{range .dependencies}}
				<div class="item">
					<i class="icon">{{svg "octicon-package-dependencies" 16 ""}}</i>
					<div class="content">
						<div class="header">{{.Name}}</div>
						<div class="description text small">{{range $i, $v := .Version}}{{if gt $i 0}}, {{end}}{{$v.Restriction}}{{$v.Version}}{{end}}</div>
					</div>
				</div>
			{{end}}
		</div>
	</div>
</div>
{{end}}
