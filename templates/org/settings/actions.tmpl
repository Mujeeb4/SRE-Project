{{template "base/head" .}}
<div role="main" aria-label="{{.Title}}" class="page-content organization settings actions">
	{{template "org/header" .}}
	<div class="ui container">
		<div class="ui grid">
			{{template "org/settings/navbar" .}}
			<div class="ui twelve wide column content">
                {{if .IsRunnersPage}}
		            {{template "shared/actions/runner_list" .}}
                {{else}}
					{{template "base/alert" .}}
				    {{template "shared/secrets/add_list" .}}
                {{end}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
