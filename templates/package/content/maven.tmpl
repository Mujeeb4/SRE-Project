{{if eq .PackageDescriptor.Package.Type "maven"}}
	<h4 class="ui top attached header">{{.i18n.Tr "packages.installation"}}</h4>
	<div class="ui attached segment">
		<div class="ui form">
			<div class="field">
				<label for="registry-input">{{svg "octicon-code"}} {{.i18n.Tr "packages.maven.registry" | Safe}}</label>
				<textarea id="registry-input" readonly="readonly" rows="18"><repositories>
	<repository>
		<id>gitea</id>
		<url>{{AppUrl}}api/packages/{{.PackageDescriptor.Owner.Name}}/maven</url>
	</repository>
</repositories>

<distributionManagement>
	<repository>
		<id>gitea</id>
		<url>{{AppUrl}}api/packages/{{.PackageDescriptor.Owner.Name}}/maven</url>
	</repository>

	<snapshotRepository>
		<id>gitea</id>
		<url>{{AppUrl}}api/packages/{{.PackageDescriptor.Owner.Name}}/maven</url>
	</snapshotRepository>
</distributionManagement></textarea>
			</div>
			<div class="field">
				<label for="pom-input">{{svg "octicon-code"}} {{.i18n.Tr "packages.maven.install" | Safe}}</label>
				<textarea id="pom-input" readonly="readonly" rows="5"><dependency>
	<groupId>{{.PackageDescriptor.Metadata.GroupID}}</groupId>
	<artifactId>{{.PackageDescriptor.Metadata.ArtifactID}}</artifactId>
	<version>{{.PackageDescriptor.Version.Version}}</version>
</dependency></textarea>
			</div>
			<div class="field">
				<label for="command-input">{{svg "octicon-terminal"}} {{.i18n.Tr "packages.maven.install2"}}</label>
				<input id="command-input" type="text" readonly="readonly" value="mvn install">
			</div>
			<div class="field">
				<label for="command-input">{{svg "octicon-terminal"}} {{.i18n.Tr "packages.maven.download"}}</label>
				<input id="command-input" type="text" readonly="readonly" value="mvn dependency:get -DremoteRepositories={{AppUrl}}api/packages/{{.PackageDescriptor.Owner.Name}}/maven -Dartifact={{.PackageDescriptor.Metadata.GroupID}}:{{.PackageDescriptor.Metadata.ArtifactID}}:{{.PackageDescriptor.Version.Version}}">
			</div>
			<div class="field">
				<label>{{.i18n.Tr "packages.maven.documentation" | Safe}}</label>
			</div>
		</div>
	</div>

	{{if .PackageDescriptor.Metadata.Description}}
		<h4 class="ui top attached header">{{.i18n.Tr "packages.about"}}</h4>
		<div class="ui attached segment">
			{{.PackageDescriptor.Metadata.Description}}
		</div>
	{{end}}

	{{if .PackageDescriptor.Metadata.Dependencies}}
		<h4 class="ui top attached header">{{.i18n.Tr "packages.dependencies"}}</h4>
		<div class="ui attached segment">
			<div class="ui list">
				{{range .PackageDescriptor.Metadata.Dependencies}}
					<div class="item">
						<i class="icon">{{svg "octicon-package-dependencies" 16 ""}}</i>
						<div class="content">
							<div class="header">{{.GroupID}}:{{.ArtifactID}}</div>
							<div class="description text small">{{.Version}}</div>
						</div>
					</div>
				{{end}}
			</div>
		</div>
	{{end}}
{{end}}
