{{template "base/head" .}}
<div class="page-content user settings sshkeys">
	{{template "user/settings/navbar" .}}
	<div class="ui container">
		{{template "base/alert" .}}

		<!-- Theme -->
		<h4 class="ui top attached header">
			{{.i18n.Tr "settings.manage_themes"}}
		</h4>
		<div class="ui attached segment">
			<div class="ui email list">
				<div class="item">
					{{.i18n.Tr "settings.theme_desc"}}
				</div>

			<form class="ui form" action="{{.Link}}/theme" method="post">
				{{.CsrfTokenHtml}}
					<div class="field">
						<label for="ui">{{.i18n.Tr "settings.ui"}}</label>
						<div class="ui selection dropdown" id="ui">
							<input name="theme" type="hidden" value="{{.SignedUser.Theme}}">
							{{svg "octicon-triangle-down" 14 "dropdown icon"}}
							<div class="text">
								{{range $i,$a := .AllThemes}}
									{{if eq $.SignedUser.Theme $a}}{{$a}}{{end}}
								{{end}}
							</div>

							<div class="menu">
							{{range $i,$a := .AllThemes}}
								<div class="item{{if eq $.SignedUser.Theme $a}} active selected{{end}}" data-value="{{$a}}">
									{{$a}}
								</div>
							{{end}}
							</div>
						</div>
					</div>

				<div class="field">
					<button class="ui green button">{{$.i18n.Tr "settings.update_theme"}}</button>
				</div>
			</form>
			</div>
		</div>

		<!-- Language -->
		<h4 class="ui top attached header">
			{{.i18n.Tr "settings.language"}}
		</h4>
		<div class="ui attached segment">
			<form class="ui form" action="{{.Link}}/language" method="post">
				{{.CsrfTokenHtml}}
				<div class="field">
					<div class="ui language selection dropdown" id="language">
						<input name="language" type="hidden" value="{{.SignedUser.Language}}">
						{{svg "octicon-triangle-down" 14 "dropdown icon"}}
						<div class="text">{{range .AllLangs}}{{if eq $.SignedUser.Language .Lang}}{{.Name}}{{end}}{{end}}</div>
						<div class="menu">
						{{range .AllLangs}}
							<div class="item{{if eq $.SignedUser.Language .Lang}} active selected{{end}}" data-value="{{.Lang}}">{{.Name}}</div>
						{{end}}
						</div>
					</div>
				</div>
				<div class="field">
					<button class="ui green button">{{$.i18n.Tr "settings.update_language"}}</button>
				</div>
			</form>
		</div>

		<!-- Shown comment event types -->
		<h4 class="ui top attached header">
			{{.i18n.Tr "settings.shown_comments"}}
		</h4>
		<div class="ui attached segment">
			<form class="ui form" action="{{.Link}}/shown_comments" method="post">
				{{.CsrfTokenHtml}}
				<div class="inline field">
					<div class="ui checkbox">
						<input name="reference" type="checkbox" {{if(call .IsHidden 3)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_ref"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="labels" type="checkbox" {{if (call .IsHidden 7)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_labels"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="milestone" type="checkbox" {{if (call .IsHidden 8)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_milestone"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="assignee" type="checkbox" {{if (call .IsHidden 9)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_assignees"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="title" type="checkbox" {{if (call .IsHidden 10)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_title"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="branch" type="checkbox" {{if (call .IsHidden 11)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_delete_branch"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="time" type="checkbox" {{if (call .IsHidden 12)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_time"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="deadline" type="checkbox" {{if (call .IsHidden 16)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_deadline"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="dependencies" type="checkbox" {{if (call .IsHidden 19)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_dependencies"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="lock" type="checkbox" {{if (call .IsHidden 23)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_lock_status"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="target" type="checkbox" {{if (call .IsHidden 25)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_target"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="requests" type="checkbox" {{if (call .IsHidden 27)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_review_request"}}</label>
					</div>
				</div>

				<div class="inline field">
					<div class="ui checkbox">
						<input name="push" type="checkbox" {{if (call .IsHidden 29)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_pr_push"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="project" type="checkbox" {{if (call .IsHidden 30)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_project"}}</label>
					</div>
				</div>
				<div class="inline field">
					<div class="ui checkbox">
						<input name="ref" type="checkbox" {{if (call .IsHidden 33)}}checked{{end}}>
						<label>{{.i18n.Tr "settings.comment_type_changed_ref"}}</label>
					</div>
				</div>
				<div class="field">
					<button class="ui green button">{{$.i18n.Tr "save"}}</button>
				</div>
			</form>
		</div>
	</div>
</div>

{{template "base/footer" .}}
