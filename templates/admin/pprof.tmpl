<h4 class="ui top attached header">
	{{.locale.Tr "admin.monitor.pprof"}}
</h4>
<div class="ui attached segment">
	<h4>{{.locale.Tr "admin.monitor.pprof.cpuprofile"}}</h4>
	<form action="{{AppSubUrl}}/admin/monitor/cpu-profile">
		<div class="ui form">
			<div class="field">
				<label for="pprof-cpuprofile-duration">{{.locale.Tr "admin.monitor.pprof.cpuprofile.duration"}}</label>
				<input id="pprof-cpuprofile-duration" type="text" name="duration" placeholder="{{.locale.Tr "admin.monitor.pprof.cpuprofile.duration_placeholder"}}">
			</div>
			<input class="ui button basic" type="submit" value="{{.locale.Tr "admin.monitor.pprof.download"}}">
		</div>
	</form>
	<h4>{{.locale.Tr "admin.monitor.pprof.named_profiles"}}</h4>
	<form action="{{AppSubUrl}}/admin/monitor/profile">
		<div class="ui form">
			<div class="field">
				<label for="pprof-named_profile-name">{{.locale.Tr "admin.monitor.pprof.named_profiles.name"}}</label>
				<select class="ui search dropdown" id="pprof-named_profile-name">
					{{range .Profiles}}
						<option value="{{.Name}}">{{.Name}}</option>
					{{end}}
				</select>
			</div>
			<div class="field">
				<label for="pprof-named_profile-debug">{{$.locale.Tr "admin.monitor.pprof.named_profile.debug"}}</label>
				<input id="pprof-named_profile-debug" type="text" name="debug" placeholder="{{$.locale.Tr "admin.monitor.pprof.named_profile.debug_placeholder"}}">
			</div>
			<input class="ui button basic" type="submit" value="{{$.locale.Tr "admin.monitor.pprof.download"}}">
		</div>
	</form>
</div>
