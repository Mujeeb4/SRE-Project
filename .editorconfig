# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{go, tmpl, html}]
indent_style = tab

[Makefile]
indent_style = tab

[*.svg]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_size = 8

[*.{tmpl, html, less, js}]
indent_size = 4
