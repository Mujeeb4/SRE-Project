root: true

extends:
  - eslint:recommended

parserOptions:
  ecmaVersion: 2017

env:
  browser: true
  jquery: true
  es6: true

globals:
  Clipboard: false
  CodeMirror: false
  emojify: false
  SimpleMDE: false
  Vue: false
  Dropzone: false
  u2fApi: false
  hljs: false

rules:
  no-unused-vars: [error, {args: all, argsIgnorePattern: ^_, varsIgnorePattern: ^_, ignoreRestSiblings: true}]
  prefer-const: [2, {destructuring: all}]
  no-var: [2]
  no-empty: [2, {allowEmptyCatch: true}]
